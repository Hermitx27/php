<?php

    $n=50;
    echo "Number prime till $n   <br>";

    for($i=2;$i<=$n;$i++)
        {
            $isPrime=true;

                for($j=2;$j<=sqrt($i);$j++)
                    {
                        if($i%$j==0)
                            {
                                $isPrime=false;
                                break;
                            }
                    }
                    if($isPrime)
                    {
                        echo "     $i";
                    }

        }
?>
